            <Label id="ChartAccount" fx:id="lblContra" minWidth="100" text="Contra" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <CheckBox id="ChartAccount" fx:id="chkContra" GridPane.columnIndex="1" GridPane.rowIndex="6" /> 
