                    <ContextMenu id="ChartAccount" fx:id="cmuSelectAccountCategory">
                        <items>
                            <MenuItem id="ChartAccount" fx:id="cmiSelectAccountCategory" mnemonicParsing="false" text="Select Account Category" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </ComboBox>  
            <Label id="ChartAccount" fx:id="lblAccountID" minWidth="100" text="Account ID" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField id="ChartAccount" fx:id="txtAccountID" minWidth="100" promptText="Enter Account ID" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <contextMenu>
                    <ContextMenu id="ChartAccount" fx:id="cmuSelectAccountID">
                        <items>
                            <MenuItem id="ChartAccount" fx:id="cmiLoad" mnemonicParsing="false" text="Load" />   
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TextField>  
            <Label id="ChartAccount" fx:id="lblAccountName" minWidth="100" text="Account Name" GridPane.columnIndex="0" GridPane.rowIndex="3" />
