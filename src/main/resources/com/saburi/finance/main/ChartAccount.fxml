            <CheckBox id="ChartAccount" fx:id="chkControlAccount" GridPane.columnIndex="1" GridPane.rowIndex="7" /> 
            <Label id="ChartAccount" fx:id="lblOpeningBalance" minWidth="100" text="Opening Balance" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <TextField id="ChartAccount" fx:id="txtOpeningBalance" editable="false" minWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="8" /> 
