<VBox fx:id = "mVBox" id="SaleOrder"  spacing="5"  xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saburi.finance.controllers.SaleOrderController">
    <children>
        <GridPane vgap ="2" hgap="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label id="SaleOrder" fx:id="lblSaleOrderID" minWidth="100" text="Sale Order ID" GridPane.columnIndex="0" 
                   GridPane.rowIndex="0" />
            <TextField fx:id = "txtSaleOrderID" id = "SaleOrder"  GridPane.rowIndex = "0" GridPane.columnIndex = "1"  minWidth="100" promptText = "Enter Sale Order ID">
                <contextMenu>
                    <ContextMenu fx:id ="cmuSelectSaleOrderID" id = "SaleOrder">
                        <items>
                            <MenuItem mnemonicParsing="false" fx:id ="cmiLoad" id = "SaleOrder" text="Load" />   
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TextField>  
            <Label id="SaleOrder" fx:id="lblOrderDate" minWidth="100" text="Order Date" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <DatePicker fx:id = "dtpOrderDate" id = "SaleOrder"  GridPane.rowIndex = "1" GridPane.columnIndex = "1" minWidth="185.0"/> 
            <Label id="SaleOrder" fx:id="lblShipAddress" minWidth="100" text="Ship Address" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextArea fx:id = "txaShipAddress" id = "SaleOrder"  GridPane.rowIndex = "2" GridPane.columnIndex = "1" prefWidth="100" promptText = "Enter Ship Address"/> 
            <Label id="SaleOrder" fx:id="lblSellTo" minWidth="100" text="Sell To" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id = "cboSellTo" id = "SaleOrder"  GridPane.rowIndex = "3" GridPane.columnIndex = "1" promptText = "Select Sell To" minWidth="185.0">
                <contextMenu>
                    <ContextMenu fx:id ="cmuSelectSellTo" id = "SaleOrder">
                        <items>
                            <MenuItem mnemonicParsing="false" fx:id ="cmiSelectSellTo" id = "SaleOrder" text="Select SellTo" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </ComboBox>  
            <Label id="SaleOrder" fx:id="lblBillTo" minWidth="100" text="Bill To" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <ComboBox fx:id = "cboBillTo" id = "SaleOrder"  GridPane.rowIndex = "0" GridPane.columnIndex = "3" promptText = "Select Bill To" minWidth="185.0">
                <contextMenu>
                    <ContextMenu fx:id ="cmuSelectBillTo" id = "SaleOrder">
                        <items>
                            <MenuItem mnemonicParsing="false" fx:id ="cmiSelectBillTo" id = "SaleOrder" text="Select BillTo" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </ComboBox>  
            <Label id="SaleOrder" fx:id="lblCurrency" minWidth="100" text="Currency" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <ComboBox fx:id = "cboCurrency" id = "SaleOrder"  GridPane.rowIndex = "1" GridPane.columnIndex = "3" promptText = "Select Currency" minWidth="185.0">
                <contextMenu>
                    <ContextMenu fx:id ="cmuSelectCurrency" id = "SaleOrder">
                        <items>
                            <MenuItem mnemonicParsing="false" fx:id ="cmiSelectCurrency" id = "SaleOrder" text="Select Currency" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </ComboBox>  
            <Label id="SaleOrder" fx:id="lblAmount" minWidth="100" text="Amount" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <TextField fx:id = "txtAmount" id = "SaleOrder"  GridPane.rowIndex = "2" GridPane.columnIndex = "3" minWidth="100" editable = "false"/> 
            <Label id="SaleOrder" fx:id="lblAmountWords" minWidth="100" text="Amount Words" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <TextArea fx:id = "txaAmountWords" id = "SaleOrder"  GridPane.rowIndex = "3" GridPane.columnIndex = "3" prefWidth="100" editable = "false"/>
        </GridPane>

        <TableView fx:id="tblSaleOrderDetails" id = "SaleOrderDetails" VBox.vgrow="ALWAYS" minHeight="300" minWidth="450">
            <padding>
                <Insets bottom="0.0" left="10.0" right="10.0" top="0.0" />
            </padding>
            <columns>
                <TableColumn id="SaleOrder" fx:id="tbcSaleOrderDetailItemID" text="Item ID" editable="true" minWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="ItemID" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn id="SaleOrder" fx:id="tbcSaleOrderDetailItemDisplay" text="Item" editable="true" minWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="ItemDisplay" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn id="SaleOrder" fx:id="tbcSaleOrderDetailBaseQuantity" text="Base Quantity" editable="true" minWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="BaseQuantity" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn id="SaleOrder" fx:id="tbcSaleOrderDetailUnitMeasure" text="Unit Measure" editable="true" minWidth="100" >
                    <cellValueFactory>
                        <PropertyValueFactory property="UnitMeasure" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn id="SaleOrder" fx:id="tbcSaleOrderDetailMeasureSize" text="Measure Size" editable="true" minWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="MeasureSize" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn id="SaleOrder" fx:id="tbcSaleOrderDetailQuantity" text="Quantity" editable="true" minWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="Quantity" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn id="SaleOrder" fx:id="tbcSaleOrderDetailUnitPrice" text="Unit Price" editable="true" minWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="UnitPriceDisplay" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn id="SaleOrder" fx:id="tbcSaleOrderDetailDiscount" text="Discount" editable="true" minWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="DiscountDisplay" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn id="SaleOrder" fx:id="tbcSaleOrderDetailAmount" text="Amount" editable="true" minWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="AmountDisplay" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <contextMenu>
                <ContextMenu fx:id ="cmuSaleOrderDetails" id = "SaleOrder">
                    <items>
                        <MenuItem mnemonicParsing="false" fx:id ="cmiSelectItem" id = "SaleOrder" text="Select Item" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <AnchorPane>
            <VBox spacing="2" AnchorPane.bottomAnchor="27.0" AnchorPane.leftAnchor="7.0">
                <Button id="SaleOrder" fx:id="btnSearch"  prefWidth="80.0" text="Search" visible="false" />
                <Button id="SaleOrder" fx:id="btnSave"  prefHeight="25.0" prefWidth="80.0" text="Save" />
            </VBox>
            <VBox spacing="2" AnchorPane.bottomAnchor="27.0" AnchorPane.rightAnchor="7.0">
                <Button id="SaleOrder" fx:id="btnDelete"  prefWidth="80.0" text="Delete" visible="false" />
                <Button id="SaleOrder" fx:id="btnClose"  prefHeight="25.0" prefWidth="80.0" text="Close" />
            </VBox>
        </AnchorPane>
    </children>

</VBox>

