                    <ContextMenu fx:id ="cmuSelectReceivableAccount" id = "CustomerPostingGroup">
                        <items>
                            <MenuItem mnemonicParsing="false" fx:id ="cmiSelectReceivableAccount" id = "CustomerPostingGroup" text="Select Receivable Account" />
