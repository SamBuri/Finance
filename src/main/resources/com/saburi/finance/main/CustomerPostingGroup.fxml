                            <MenuItem mnemonicParsing="false" fx:id ="cmiSelectPaymentDiscountAccount" id = "CustomerPostingGroup" text="Select Payment Discount Account" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </ComboBox>  
            <Label id="CustomerPostingGroup" fx:id="lblUnPaidRefunds" minWidth="100" text="Un paid Refunds" GridPane.columnIndex="0" GridPane.rowIndex="5" />
