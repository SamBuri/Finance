                    </ContextMenu>
                </contextMenu>
            </ComboBox>  
            <Label id="CustomerPostingGroup" fx:id="lblPaymentDiscountAccount" minWidth="100" text="Payment Discount Account" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id = "cboPaymentDiscountAccount" id = "CustomerPostingGroup"  GridPane.rowIndex = "4" GridPane.columnIndex = "1" promptText = "Select Payment Discount Account" minWidth="185.0">
