                    <ContextMenu fx:id ="cmuSelectCustomerPostingGroupID" id = "CustomerPostingGroup">
                        <items>
                            <MenuItem mnemonicParsing="false" fx:id ="cmiLoad" id = "CustomerPostingGroup" text="Load" />   
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TextField>  
            <Label id="CustomerPostingGroup" fx:id="lblCustomerGroup" minWidth="100" text="Customer Group" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id = "cboCustomerGroup" id = "CustomerPostingGroup"  GridPane.rowIndex = "1" GridPane.columnIndex = "1" promptText = "Select Customer Group" minWidth="185.0">
                <contextMenu>
                    <ContextMenu fx:id ="cmuSelectCustomerGroup" id = "CustomerPostingGroup">
                        <items>
                            <MenuItem mnemonicParsing="false" fx:id ="cmiSelectCustomerGroup" id = "CustomerPostingGroup" text="Select Customer Group" />
                        </items>
                    </ContextMenu>
                </contextMenu>
            </ComboBox>  
            <Label id="CustomerPostingGroup" fx:id="lblReceivableAccount" minWidth="100" text="Receivable Account" GridPane.columnIndex="0" GridPane.rowIndex="2" />
