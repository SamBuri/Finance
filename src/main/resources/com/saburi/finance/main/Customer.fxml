                        </items>
                    </ContextMenu>
                </contextMenu>
            </ComboBox>  
            <Label id="Customer" fx:id="lblSponser" minWidth="100" text="Can Sponser" GridPane.columnIndex="2" GridPane.rowIndex="3" />
